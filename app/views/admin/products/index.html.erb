<h2> Product List </h2>
<div class="pull-right", style="padding-bottom: 20px">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default") %>
</div>
<table class="table table-boldered table-striped custab">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td> <%= product.id %> </td>
      <td>
      <%= link_to admin_product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.medium.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      </td>
      <td><%= link_to(product.title, admin_product_path(product)) %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to("Edit", edit_admin_product_path(product)) %>
        <%= icon('fas', 'grip-lines-vertical') %>
        <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
