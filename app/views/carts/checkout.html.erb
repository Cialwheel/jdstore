<div class="row">
  <div class="col-md-12">
    <h2> Shopping Details </h2>
    <table class="table table-boldered table-striped custab">
      <tr>
        <th>Product details</th>
        <th>Price</th>
        <th>Quantity</th>
      </tr>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>
            <td>
              <%= cart_item.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= render_total(current_cart) %> RMB
      </span>
    </div>

    <hr>

    <h2> Address </h2>
    <div class="order-form" >
      <%= simple_form_for @order do |f| %>
        <legend> buyer </legend>
        <div class="form-group col-lg-6">
          <%= f.input :billing_name %>
        </div>
        <div class="form-group col-lg-6">
            <%= f.input :billing_address  %>
          </div>

          <legend> receiver </legend>
          <div class="form-group col-lg-6">
           <%= f.input :shipping_name  %>
          </div>
          <div class="form-group col-lg-6">
            <%= f.input :shipping_address  %>
          </div>

        <div class="checkout">
          <%= f.submit "Create", class: "btn btn-lg btn-danger pull-right",
                       data: { disable_with: "Submitting..." } %>
        </div>
      <% end %>

    </div>
  </div>
</div>
